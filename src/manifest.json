{
  "manifest_version": 2,
  "name": "YouTube Magic",
  "version": "1.0.0",
  "description": "Hides unwanted YouTube videos using UI indicators.",
  "permissions": ["management", "tabs", "activeTab", "storage"],
  "background": {
    "scripts": ["code/background/index.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["code/content/index.js"],
      "css": ["code/content/styles.css"]
    }
  ],
  "icons": {
    "48": "media/icons/extension-is-enabled.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-magic@dbe7a3d8-f842-4b8e-b0bb-a8acf0874e05",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
